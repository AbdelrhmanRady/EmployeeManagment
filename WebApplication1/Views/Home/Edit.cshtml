@model EmployeeEditViewModel

@{
    ViewData["Title"] = "Create";
    var photoPath = "~/Images/" + (Model.existingPhotopath??"lake.jpg");
}

<form enctype="multipart/form-data" method="post">
    <div asp-validation-summary="All" class="text-danger"> </div>
    <input hidden asp-for="Id" />
    <input hidden asp-for="existingPhotopath" />
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger d-block"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger d-block"></span>
    </div>
    <div>
        <label asp-for="Department"></label>
        <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()">
            <option value="">Please Select</option>
        </select>
        <span asp-validation-for="Department" class="text-danger d-block"></span>
    </div>
    <div>
        <label asp-for="Photo"></label>
        <input multiple asp-for="Photo" />

    </div>
    <img src="@photoPath" asp-append-version ="true" />
    <button class="btn btn-primary" type="submit">Submit</button>


</form>

