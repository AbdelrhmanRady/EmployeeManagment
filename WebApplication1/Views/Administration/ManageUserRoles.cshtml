@model List<ManageUserViewModel>

@{
    var userId = ViewBag.id;
}



<form method="post">
    <div class="card">
        <div class="card-header">
            Manage User Roles
        </div>
        <div class="card-body">

            @for(int i = 0; i < Model.Count; i++)
            {
            <div class="form-check">
                <input asp-for="@Model[i].roleName" hidden>
                <input class="form-check-input" asp-for="@Model[i].isSelected">
                <label class="form-check-label" >
                    @Model[i].roleName
                </label>
            </div>
            }
            <div class="card-footer">
                <input type="submit" value="Update" class ="btn btn-primary" />
                <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary">Cancel</a>
            </div>


        </div>
    </div>

</form>