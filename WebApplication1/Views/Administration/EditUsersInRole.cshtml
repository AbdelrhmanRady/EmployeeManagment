@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}

<form method="post">
    @Model[0].UserName
    @Model[0].UserId
    <div class="card">



        <div class="card-header">
             <h2>Add or Remove users from this role </h2>
        </div>
        <div class="card-body">
            @for(int i = 0; i < @Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model[i].UserName"  type="hidden">
                    <input asp-for="@Model[i].UserId" type="hidden">
                    <input asp-for="@Model[i].IsSelected" class="form-check-input">
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">
                        @Model[i].UserName
                    </label>
                </div>

            }

        <div class="card-footer">
            <input type="submit" class="btn btn-primary" value="Update">
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary">Cancel</a>
        </div>

    </div>

</form>